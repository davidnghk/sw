<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <!--    
      <div class="panel-heading">
        Photos
      </div>
      --> 

      <div style="padding:0" class="panel-body">
        <div style="padding:0" class="container">
          <div class="row">
            <div class="col-md-12">
              <!-- Phgotos upload goes here -->
              <%= form_for @item, url: create_after_item_photos_path(@item), method: 'post',
                  html: {multipart: true} do |f| %>

                 <div class="text-center">
                   <div class="form-group">

                     <span class="btn btn-info text-babu">
                       <i class="fa fa-camera" aria-hidden="true"></i><%= t("after_photos") %>
                       <%= file_field_tag "images[]", type: :file, multiple: true %>
                     </span>
                   </div>
                 </div>

                <div class="text-center">
                  <%= button_tag type: 'submit', class: "btn btn-primary" do %><%= t("upload") %>
                      <i class="fa fa-cloud-upload" aria-hidden="true"></i>
                  <% end %>
                </div>

              <% end %>
            </div>
          </div>

            <div id="after_photos"><%= render 'photos/item_after_photos_list' %> </div>


        </div>
      </div>

    </div>
  </div>

</div>
