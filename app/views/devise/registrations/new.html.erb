<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h3><%= t("sign_up") %> </h3>
    <%= render 'layouts/devise_errors' %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>
    <div class="form-group">
      
    <% if params[:role] == 'partner' %>

        <div class="form-group">
          <%= f.label :image %>
          <%= f.file_field :image, class:  'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :hkid_image %>
          <%= f.file_field :hkid_image, class:  'form-control' %>
        </div>
      
      <fieldset>
        <div class="form-group">
          <%= f.label :registration_no %>
          <%= f.text_field :registration_no, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :registration_chinese_name %>
          <%= f.text_field :registration_chinese_name, class: 'form-control' %>
        </div>    
        <div class="form-group">
          <%= f.label :registration_english_name %>
          <%= f.text_field :registration_english_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :registration_expiry_date %>
          <%= f.date_field :registration_expiry_date, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :certificate_image %>
          <%= f.file_field :certificate_image, class:  'form-control' %>
        </div>
      </fieldset>
      
      <fieldset>
        <div class="form-group">
          <%= f.label :bank %>
          <%= f.select :bank, User.banks.keys.to_a, class: 'form-control' %>   
        </div>
        <div class="form-group">
          <%= f.label :bank_account_no %>
          <%= f.text_field :bank_account_no, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :bank_account_name %>
          <%= f.text_field :bank_account_name, class: 'form-control' %>
        </div>
      </fieldset>
      
      <%= f.hidden_field :role, value: :partner, class: 'form-control' %>
    <% else %>
      <%= f.hidden_field :role, value: :New, class: 'form-control' %>
    <% end %>
    
      <%= f.hidden_field :status, value: :Pending, class: 'form-control' %>
    </div>
  
  
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>
     <%= f.submit 'Sign up', :class => 'button right' %>
  <% end %>
</div>
