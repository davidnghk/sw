<div class="container">
  <%= simple_form_for(@order_party) do |f| %>

  <br>
    <div class="form-inputs">
      <%#= f.association :order %>
      <%= f.input :order_id, :value => params[:order_id] %>

        <div class="row">
            <div class="col-xs-12 col-md-4 ">
              <%= f.input :name , label: t("name")%>
            </div>
            <div class="col-xs-12 col-md-4 ">
              <%= f.input :designation , label: t("designation")%>
            </div>
            <div class="col-xs-12 col-md-4 ">
              <%= f.input :organization , label: t("organization")%>
            </div>
        </div>

    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
