<h1>Listing Order Parties</h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Name</th>
      <th>Designation</th>
      <th>Organization</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_parties.each do |order_party| %>
      <tr>
        <td><%= order_party.order %></td>
        <td><%= order_party.name %></td>
        <td><%= order_party.designation %></td>
        <td><%= order_party.organization %></td>
        <td><%= link_to 'Show', order_party %></td>
        <td><%= link_to 'Edit', edit_order_party_path(order_party) %></td>
        <td><%= link_to 'Destroy', order_party, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

